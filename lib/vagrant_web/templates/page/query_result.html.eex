<h1>Github account for <a href="<%= @profile_url %>"><%= @username %></a></h1>
<a href="<%= @profile_url %>">
  <img src="<%= @profile_pic %>" style="width: 100px; height: 100px; border-radius: 50%; border: 4px solid #ddd;"/>
</a>
<h2><%= @username %> is watching <%= length(@repos) %> repos. </h2>
<ul>
  <%= for repo <- @repos do %>
    <li>
      <a href="<%= repo["url"] %>">
        <%= repo["name"] %>
      </a>
      : <%= repo["description"] %>
    </li>
  <% end %>
</ul>
